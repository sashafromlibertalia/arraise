{
    "compilerOptions": {
        "declaration": true,
        "target": "es5",
        "outDir": "dist",
        "module": "commonjs",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "src"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}